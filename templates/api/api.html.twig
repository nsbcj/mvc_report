{# templates/index.html.twig #}

{% extends('base.html.twig') %}

{% block title %}Game{% endblock %}

{% block content %}
<div class="main-title">
    <h1>Välkommen till API-sidan</h1>
</div>

<div class="main-content">
    {{ include('dicegame/flash.html.twig') }}
    <p>Detta är en undersida som listar API:er kopplade till webbplatsen.</p>
</div>

<div class="main-side">
    <ul>
        <li><a href="{{ path('quoteApi') }}">Citat API</a></li>
        <li><a href="{{ path('deckApi') }}">Kortlek API</a></li>
        <li>
            <form action="{{ path('shuffleApi') }}" method="post">
                <input class="link" type="submit" value="Shuffle">
            </form>
        </li>
        <li>
            <form action="{{ path('drawApi') }}" method="post">
                <input class="link" type="submit" value="Draw">
            </form>
        </li>
        <li>
            <form id="draw" action="api/deck/draw/1" method="post">
                <input type="number" name="" id="number" min="1" max="52" value="1" onChange="this.form.action = `api/deck/draw/${this.value}`;">
                <input class="link" type="submit" value="DrawMany">
            </form>
        </li>
        <li>
            <form action="{{ path('gameApi') }}" method="post">
                <input class="link" type="submit" value="Game Api">
            </form>
        </li>
        <li><a href="{{ path('library_books_api') }}">Bibliotek API</a></li>
        <li><a href="api/library/book/1000000001">Hitta bok genom ISBN</a></li>
    </ul>
</div>
{% endblock %}
