{# templates/hand.html.twig #}

{% extends('base.html.twig') %}

{% block title %}Hand{% endblock %}

{% block content %}
<div class="main-title">
    <h1>Välkommen till Kortsidan</h1>
</div>

<div class="main-content">
    <p>På denna sida visas kort som är plockade från kortleken.</p>
    {% for card in hand %}
        <p class="card-sprite {{ card }}"></p>
    {% endfor %}
    <p>Antal kort i kortlek: {{ deckLength }}</p>
</div>

<div class="main-side">
    <ul>
        <li><a href="{{ path ('card') }}">Första sida</a></li>
        <li><a href="{{ path ('deck') }}">Deck</a></li>
        <li><a href="{{ path ('shuffle') }}">Shuffle</a></li>
        <li><a href="{{ path ('draw') }}">Draw</a></li>
        <li><a href="{{ asset ('card/deck/draw/4') }}">Draw many</a></li>
    </ul>
</div>
{% endblock %}
